
@{
    ViewData["Title"] = "Index";
}


@section Style{

    <link rel="stylesheet" href="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/scss/Contact/Contact.css">
}

<div class="contact-page"><span>Contact</span></div>
<div class="home-contact">
    <a asp-controller="home" asp-action="index"><span>Home</span></a><span>
        / Contact
    </span>
</div>


<main>
    <section id="contact">

        <div class="container">

            <div class="contact mt-5">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3039.4286744962333!2d49.85175681588974!3d40.37719087936988!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40307d079efb5163%3A0xc20aa51a5f0b5e01!2sCode%20Academy!5e0!3m2!1sru!2saz!4v1678038289496!5m2!1sru!2saz"
                        height="400px" width="100%" style="border:0;" allowfullscreen="" loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade">
                </iframe>

                <div class="form mt-5">
                    <div class=" col-6 left">
                        <h1>Get In Touch</h1>

                        <div class="address-phone-email">
                            <i class="fa-solid fa-house"></i>

                            <div class="text">
                                <h3>Address</h3>
                                <h5>
                                    221b Baker St, Marylebone
                                    London NW1 6XE, UK
                                </h5>
                            </div>
                        </div>

                        <hr>

                        <div class="address-phone-email">
                            <i class="fa-solid fa-phone"></i>

                            <div class="text">
                                <h3>Phone</h3>
                                <h5>+1-202-242-8157</h5>
                            </div>
                        </div>

                        <hr>

                        <div class="address-phone-email">
                            <i class="fa-solid fa-envelope"></i>

                            <div class="text">
                                <h3>Email</h3>
                                <h5>info@example.com</h5>
                            </div>
                        </div>
                    </div>

                    <div class="col-6 right">
                        <h1>Contact Us</h1>

                        <form>
                            <div class="group inputs">
                                <input required type="text">
                                <span class="bar"></span>
                                <label>Your Name (required) *</label>
                                <span class="validation">Please enter a valid message</span>
                            </div>

                            <div class="group inputs">
                                <input required type="text">
                                <span class="bar"></span>
                                <label>Your Email (required) *</label>
                                <span class="validation">Please enter a valid message</span>
                            </div>

                            <div class="group inputs">
                                <input required type="text">
                                <span class="bar"></span>
                                <label>Subject *</label>
                                <span class="validation">Please enter a valid message</span>
                            </div>



                            <div class="group textarea">
                                <textarea required></textarea>
                                <span class="bar"></span>
                                <label>Post content *</label>
                            </div>

                            <button type="submit">Send</button>
                        </form>
                    </div>
                </div>

            </div>

        </div>
    </section>
</main>


@section Scripts{

    <script src="/assets/js/Contact/contact.js"></script>

}