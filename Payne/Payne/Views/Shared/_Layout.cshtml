@inject Payne.Services.LayoutttService layoutService

@{
    BasketVm basket = layoutService.GetBaskets();
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
