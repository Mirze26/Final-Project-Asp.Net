                                    <li>
                                        <a asp-controller="Contact" asp-action="Index">Contact</a>
                                    </li>


                                </ul>
                            </div>
                        </div>




                        <div class="col-3">
                            <div class="icons">
                                <ul>
                                    <li>
                                        <a href=""><i class="fa-solid fa-magnifying-glass glass"></i></a>
                                    </li>

                                    <li>
                                        <a href=""><i class="fa-regular fa-user user"></i></a>
                                    </li>

                                    <li>
                                        <a href="file:///C:/Users/PC/Desktop/end%20pro/Final-Project/End%20Project/wishlist.html">
