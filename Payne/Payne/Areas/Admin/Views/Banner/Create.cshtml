@model BannerCreateVM

@{
    ViewData["Title"] = "Create";
}

<div class="container my-5">
    <h1>Banner Create</h1>

    <form class="forms-sample" asp-action="Create" method="post" enctype="multipart/form-data">
        <input class="form-control" id="customFile" asp-for="Photos" />
        <span class="text-danger" asp-validation-for="Photos"></span>
        <div class="form-group">
            <label class="my-2">Title</label>
            <input class="form-control " id="customFile" asp-for="Title" />
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>

     

        <div class="form-group">
            <label class="my-2">Name</label>
            <input class="form-control " id="customFile" asp-for="Name" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>


        <div class="form-group">
            <input class="mt-3" type="checkbox" asp-for="IsLarge">
            <label>Large Image</label>
        </div>
       

        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>

