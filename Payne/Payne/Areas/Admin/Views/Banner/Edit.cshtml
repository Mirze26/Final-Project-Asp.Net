@model BannerEditVM

@{
    ViewData["Title"] = "Edit";
}

<section class="pcoded-main-container ">
    <div class="pcoded-content">
        <div class="row">
            <div class="col-12">
                <div class="image"><img class="img-fluid" width="300"  src="~/assets/image/home/@Model.Image" /></div>
                <form method="post" enctype="multipart/form-data" asp-action="Edit">
                  
                    <div class="form-group " >
                        <label>Image</label>
                        <input type="file" class="form-control"width="70" asp-for="Photo">
                    </div>


                    <div class="form-group">
                        <label>Name</label>
                        <textarea rows="3" class="form-control" id="banner" asp-for="Name"></textarea>
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                
                  
                    <div class="form-group">
                        <label>Title</label>
                        <textarea rows="3" class="form-control" id="banner" asp-for="Title"></textarea>
                        <span class="text-danger" asp-validation-for="Title"></span>
                    </div>
                    <button type="submit" class="btn btn-success"><i class="feather mr-2 icon-check-circle"></i>Submit</button>
                    <a asp-action="Index" class="btn btn-danger"><i class="feather mr-2 icon-check-circle"></i>Cancel</a>
                </form>
            </div>
        </div>
    </div>
</section>






