@model Banner
@{
    ViewData["Title"] = "Detail";
}

<div class="container my-5">
    <h1>Banner Detail</h1>

    <div class="slider-content">
        <img class="img-fluid" src="~/assets/image/home//@Model.Image" />
    </div>

    <div class="form-group">
        <label class="my-2">Name</label>
        <input class="form-control" disabled id="customFile" asp-for="Name" />
    </div>
    <div class="form-group">
        <label class="my-2">Title</label>
        <input class="form-control" disabled id="customFile" asp-for="Title" />
    </div>

    <div class="form-group">
        <label class="my-2">Large Image</label>
        <input class="form-control" value="@(Model.IsLarge?"Yes":"No")" disabled id="description-text" />
    </div>


    <a class="btn btn-info mt-3" asp-action="Index">Back</a>
</div>

