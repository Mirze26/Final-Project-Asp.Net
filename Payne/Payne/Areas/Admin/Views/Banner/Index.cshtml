@model IEnumerable<Banner>

@{
    ViewData["Title"] = "Index";
}

<div class="container my-5">
    <a class="btn btn-success text-white" asp-action="Create" style="float:right;">Create</a>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Title
                    </th>

                </tr>
            </thead>


            <tbody>
                
               
                  @foreach (var banner in Model)
                {
                    <tr>
                        <td class="py-1">
                            <img class="img-fluid" src="~/assets/image/home/@banner.Image" style="width:70px;height:70px" alt="image" />
                        </td>
                        <td class="py-1">
                            @banner.Name
                        </td>
                        <td class="py-1">
                            @banner.Title
                        </td>


                        <td>
                            <div style="display: flex; margin-top: 10px; gap: 6px;">
                                <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@banner.Id">Info</a>
                                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@banner.Id">Edit</a>
                                <form asp-action="Delete" asp-route-id="@banner.Id" method="post">
                                    <button type="submit" class="btn btn-outline-danger">Delete</button>
                                </form>
                            </div>

                        </td>
                    </tr>
                }
                

            </tbody>
        </table>
    </div>
</div>

