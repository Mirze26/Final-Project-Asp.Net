@model ProductDetailVM

@{
    ViewData["Title"] = "Detail";
}

<h1>Detail</h1>








<div class="container my-5">
    <h1>Product Detail</h1>

    <div class="form-group">
        @foreach (var item in Model.Images)
        {
            <img src="~/assets/image/shop//@item.Image" style="width:150px; height:150px" alt="Alternate Text" />
        }

    </div>


    <div class="form-group">
        <label class="my-2">Name</label>
        <input class="form-control" disabled id="customFile" asp-for="Name" />
    </div>

    <div class="form-group">
        <label class="my-2">Description</label>
        <input class="form-control" disabled id="customFile" asp-for="Description" />
    </div>


    <div class="form-group">
        <label class="my-2">Sku</label>
        <input class="form-control" disabled id="customFile" asp-for="Sku" />
    </div>


    <div class="form-group">
        <label class="my-2">Price</label>
        <input class="form-control" disabled id="customFile" asp-for="Price" />
    </div>


    <div class="form-group">
        <label class="my-2">Rating</label>
        <input class="form-control" disabled id="customFile" asp-for="Rating" />
    </div>



    <div class="form-group">
        <label class="my-2">Color Name</label>
        <input class="form-control" disabled id="customFile" asp-for="ColorName" />
    </div>

    <div class="form-group">
        <label class="my-2">Brand Name</label>
        <input class="form-control" disabled id="customFile" asp-for="BrandName" />
    </div>


    <a class="btn btn-info mt-3" asp-action="Index">Back</a>
</div>

