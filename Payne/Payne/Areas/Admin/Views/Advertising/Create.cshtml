@model AdvertisingCreateVM

@{
    ViewData["Title"] = "Create";
}


<div class="container my-5">
    <h1>Advertising Create</h1>

    <form class="forms-sample" asp-action="Create" method="post" enctype="multipart/form-data">

        <input class="form-control" id="customFile" asp-for="Photo" />
        <span class="text-danger" asp-validation-for="Photo"></span>



        <div class="form-group">
            <label class="my-2">Name</label>
            <input class="form-control " id="customFile" asp-for="Name" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>


        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>

