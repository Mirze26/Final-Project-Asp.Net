@model Slider
@{
    ViewData["Title"] = "Detail";
}

<div class="container my-5">
    <h1>Slider Detail</h1>

    <div class="slider-content">
        <img class="img-fluid" src="~/assets/image/home//@Model.Image" />
    </div>

    <div class="form-group">
        <label class="my-2">Title</label>
        <input class="form-control" disabled id="customFile" asp-for="Title" />
    </div>
    <div class="form-group">
        <label class="my-2">Offer</label>
        <input class="form-control" disabled id="customFile" asp-for="Offer" />
    </div>
    <div class="form-group">
        <label class="my-2">Description</label>
        <input class="form-control" disabled id="description-text" asp-for="Description" />
    </div>

    <a class="btn btn-info mt-3" asp-action="Index">Back</a>
</div>

